{
    "name"              : "jbzoo/skeleton-php",
    "type"              : "library",
    "description"       : "",
    "license"           : "MIT",
    "keywords"          : ["skeleton", "travis", "phpunit", "composer", "github", "jbzoo", "packagist"],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php" : ">=5.4"
    },
    "require-dev"       : {
        "jbzoo/phpunit" : "1.x-dev"
    },
    "autoload"          : {
        "psr-4" : {
            "JBZoo\\__PACKAGE__\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "config"            : {
        "optimize-autoloader" : true
    },    
    "scripts"           : {
        "skeleton"   : [
            "php ./new-package.php __CHANGE_ME__",
            "@update-all",
            "@test"
        ]
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/__PACKAGE__/issues"
    }
}
